<div class="post">
  <h1>投稿する</h1>
  <div class="post-form">
    <%= form_with model: @post do |f| %>
      <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <%= f.text_area :content %>
      <%= f.submit "投稿" %>
    <% end %>
  </div>
</div>